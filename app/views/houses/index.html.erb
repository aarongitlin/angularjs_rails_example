<h1>Listing houses</h1>

<table>
  <tr>
    <th>Address</th>
    <th>Suburb</th>
    <th>Postcode</th>
    <th>Cost</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @houses.each do |house| %>
  <tr>
    <td><%= house.address %></td>
    <td><%= house.suburb %></td>
    <td><%= house.postcode %></td>
    <td><%= house.cost %></td>
    <td><%= house.value %></td>
    <td><%= link_to 'Show', house %></td>
    <td><%= link_to 'Edit', edit_house_path(house) %></td>
    <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

